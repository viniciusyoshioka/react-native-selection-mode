{
    "name": "react-native-selection-mode",
    "description": "Library to handle selection mode",
    "version": "1.0.0",
    "license": "MIT",
    "main": "lib/commonjs/index.js",
    "module": "lib/module/index.js",
    "types": "lib/typescript/index.d.ts",
    "source": "src/index.ts",
    "react-native": "src/index.ts",
    "files": [
        "src",
        "lib",
        "README.md"
    ],
    "scripts": {
        "typecheck": "tsc --noEmit",
        "lint": "eslint '**/*.{js,ts,tsx}'",
        "bootstrap": "yarn && cd example && yarn",
        "example": "yarn --cwd example",
        "start": "yarn --cwd example start",
        "android": "yarn --cwd example android",
        "ios": "yarn --cwd example ios",
        "build": "bob build"
    },
    "peerDependencies": {
        "react": "*"
    },
    "devDependencies": {
        "@types/react": "^18.2.55",
        "@typescript-eslint/eslint-plugin": "^7.0.1",
        "@typescript-eslint/parser": "^7.0.1",
        "@vinicius1313/eslint-config": "^1.0.0",
        "@vinicius1313/tsconfig": "^1.0.0",
        "eslint": "^8.56.0",
        "react-native-builder-bob": "^0.23.2",
        "typescript": "^5.3.3"
    },
    "react-native-builder-bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            "commonjs",
            "module",
            [
                "typescript",
                {
                    "project": "tsconfig.json"
                }
            ]
        ]
    }
}
